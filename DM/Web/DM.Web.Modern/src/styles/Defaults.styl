html, body
  height 100%
  margin 0
  overflow hidden

body
  font-family PT Sans
  font-size $fontSize
  line-height 1.3
  word-wrap break-word

a
  theme(color, $activeText)
  text-decoration none
  transition color $animationTime
  cursor pointer
  &:hover
    theme(color, $activeHoverText)

.quote
  padding $small
  theme(background-color, $quoteBackground)
  themeExtend(border-left, $minor solid, $quoteOutline)

.info-head
  display inline-block
  margin $medium 0 $small
  font-size $titleFontSize
  font-weight normal
  theme(color, $highlightText)

.page-title
  pageTitle()

.content-title
  header()

.content-minor-title
  minorTitle()